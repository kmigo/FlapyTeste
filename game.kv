<BarrelMed>:
	size_hint_y:None
	height:553
	bird:self.parent.birdObj
	canvas:
		Color:
			rgba:1,1,1,0
		Rectangle:
			size:self.size
			pos:self.pos

<BarrelInf>:
	BoxLayout:
		size_hint:None,None
		size:root.size
		x:root.x
		y:root.y
		Image:
			source:'canoInf.png'
			allow_stretch:True
