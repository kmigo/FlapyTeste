# -*- coding :utf-8 -*-
<ScreenGame>:
	Bird:
		center:self.parent.center
	Barrel:
		id:barrel
		center_x:self.parent.center_x + self.parent.center_x * .75

<Barrel>:
	size:220,self.parent.height
	Barrel_Sup:
		y:self.parent.y +self.parent.height *.7
		x:self.parent.x 
		
	Barrel_Mid:
		y:self.parent.y +self.parent.height *.4
		x:self.parent.x
	
	Barrel_Inf:
		y:self.parent.y
		x:self.parent.x

<Barrel_Sup>:
	size:self.parent.width,self.parent.height *.3
	canvas:
		Rectangle:
			size:self.size
			pos:self.pos

<Barrel_Mid>:
	size:self.parent.width,self.parent.height *.3
	canvas:
		Color:
			rgba:1,0,0,1
		Rectangle:
			size:self.size
			pos:self.pos

<Barrel_Inf>:
	size:self.parent.width,self.parent.height *.4
	canvas:
		Color:
			rgba:1,1,1,1
		Rectangle:
			size:self.size
			pos:self.pos

<Bird>:
	size:150,150
	canvas:
		RoundedRectangle:
			size:self.size
			pos:self.pos
			radius:[360,]